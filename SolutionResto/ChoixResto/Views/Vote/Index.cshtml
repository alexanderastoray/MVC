@model ChoixResto.ViewModels.RestaurantVoteViewModel
<div class="text-center">
    <p>Cochez le restaurants où vous voulez bien aller. Attention, le vote est définitif</p>
    @Html.ValidationMessageFor(m => m.ListeDesResto)
    @using (Html.BeginForm())
    {
        for (int i = 0; i < Model.ListeDesResto.Count; i++)
        {
            <div class="form-check">
                @Html.CheckBoxFor(m => m.ListeDesResto[i].EstSelectionne, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.ListeDesResto[i].EstSelectionne, Model.ListeDesResto[i].NomEtTelephone, new { @class = "form-check-label" })
                @Html.HiddenFor(m => m.ListeDesResto[i].Id)
                @Html.HiddenFor(m => m.ListeDesResto[i].NomEtTelephone)
            </div>
        }
         <br />
        <input type="submit" class="btn btn-primary btn-lg active" value="Valider le choix"/>
    }

</div>  