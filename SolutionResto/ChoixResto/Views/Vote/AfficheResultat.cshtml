@model List<ChoixResto.Models.Resultats>
<div class="text-center">
    <form>
        <p>Résultats du sondage :</p>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Nom</th>
                    <th>Téléphone</th>
                    <th>Nombre de votes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var resto in Model)
                {
                <tr>
                    <td>@resto.Nom</td>
                    <td>@resto.Telephone</td>
                    <td>@resto.NombreDeVotes</td>
                </tr>
                }
            </tbody>
        </table>
    </form>
    
</div> 
